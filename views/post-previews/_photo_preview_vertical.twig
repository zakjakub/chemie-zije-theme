{% set image_src = post.thumbnail.src|default(get_image(post.meta('_menu_image')).src|default) %}

<article class="col-12 col-sm-6 col-md-4 col-lg-3">
    <a class="card border-0 h-100 text-dark text-decoration-none flex-column d-flex flex-nowrap" href="{{ image_src }}">
        {% if image_src|default and image_src|length > 0 %}
            <div class="card-img-top mx-auto mt-3">
                <img class="d-block w-100 mh-100 p-2 img-thumbnail" src="{{ image_src }}"
                     alt="{{ post.thumbnail.alt }}">
            </div>
        {% endif %}
        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center fw-normal fs-5 my-0 text-muted">
                {{ post.title }}
            </h5>
        </div>
    </a>
</article>
