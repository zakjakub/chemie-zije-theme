{% extends "post-types/page.html.twig" %}

{#
Theme for page with list of chemical industry materials.
This page theme can be selected as custom theme of single "page" type post (due to config in "theme/page_chemical-industry-materials.php").
#}

{% block page_content %}
    <section class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
        {% include 'layout/main-banner.html.twig' with {image: post.thumbnail, title: post.title} %}
        {% for element in elements %}
            {% include 'post-previews/_post_preview_horizontal.html.twig' with {post: element} %}
        {% endfor %}
    </section>
    {% if (post.content|default and post.content|length > 0) or (content|default and content|length > 0) %}
        <section class="row my-5">
            <div class="col-12">
                {{ post.content|default(content|default) }}
            </div>
        </section>
    {% endif %}
{% endblock page_content %}
