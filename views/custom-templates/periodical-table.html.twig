{% extends "post-types/page.html.twig" %}

{#
Theme for page with list of contact persons.
This page theme can be selected as custom theme of single "page" type post (due to config in "theme/page_periodical-table.php").
#}

{% set periodicalTable = site.theme.link ~ '/images/others/periodical-table.png' %}

{% block body_content %}
    <div class="container my-5">
        {% block periodical_table %}
        <div class="row post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <div class="col-12 periodical-table" id="interactive-periodical-table">
                {% include 'post-parts/periodical-table/interactive-periodical-table.html.twig' %}
            </div>
        </div>
        {% endblock periodical_table %}
    </div>
    <div class="container-fluid my-5">
        {% block periodical_table %}
        <div class="row post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <div class="col-12">
                {% include 'post-parts/periodical-table/interactive-periodical-table.html.twig' %}
            </div>
        </div>
        {% endblock periodical_table %}
    </div>
{% endblock body_content %}
