{% extends "post-types/page.html.twig" %}

{% block article_content %}
    {% if (post.content|default and post.content|length > 0) or (content|default and content|length > 0) %}
        <div class="row my-5">
            <div class="col-12">
                {{ post.content|default(content|default) }}
            </div>
        </div>
    {% endif %}

    <div class="row mt-3 mb-0" style="line-height: 1.1;">
        {% for oneSubType in subtypes %}
            <!-- ONE SUBTYPE -->
            {% set classes_common = "d-flex col m-0 mt-3 px-5 px-xl-4 py-2 text-center align-items-center justify-content-center" %}
            {% set classes_border = "border border-bottom-0 border-3 border-primary rounded-bottom rounded-pill" %}
            {% set classes = classes_common ~ " " ~ classes_border %}
            {% if subtype == oneSubType.slug %}
                <a class="{{ classes }} bg-white text-primary" href="?oblast={{ oneSubType.slug }}">
                    <strong>{{ oneSubType.name }}</strong>
                </a>
            {% else %}
                <a class="{{ classes }} bg-primary text-white" href="?oblast={{ oneSubType.slug }}">
                    {{ oneSubType.name }}
                </a>
            {% endif %}
        {% endfor %}
    </div>

    <div class="row mt-0 mb-5 border border-top-0 border-3 border-dark">
        {% for material in materials %}
            <article class="col-12 col-sm-6 col-md-4 col-lg-3">
                {% set image_src = material.thumbnail.src|default(get_image(material.meta('_menu_image')).src|default) %}
                <a class="card border-0 h-100 text-dark text-decoration-none flex-column d-flex flex-nowrap" href="{{ image_src }}">
                    {% if image_src|default and image_src|length > 0 %}
                        <div class="card-img-top mx-auto mt-3">
                            <img class="d-block w-100 mh-100 p-2 img-thumbnail" src="{{ image_src }}" alt="{{ material.thumbnail.alt }}">
                        </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">
                            {{ material.title }}
                        </h5>
                    </div>
                </a>
            </article>
        {% endfor %}
        {% if materials|length < 1 %}
            <article class="col-12">
                <p><strong>V této kategorii bohužel ještě nejsou žádné fotografie.</strong></p>
            </article>
        {% endif %}
    </div>
{% endblock article_content %}

{% block article_signpost %}
{% endblock article_signpost %}
