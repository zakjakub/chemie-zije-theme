{% if posts|default and posts|length > 0 %}
    <nav class="container">
        <div class="row m-3 g-5 justify-content-md-center">
            {% for post in posts %}
                <div class="col-12 col-md-6 col-lg-4">
                    <a class="card signpost-card border-0 h-100 text-dark text-decoration-none" href="{{ post.path }}">
                        {% if post.meta('_menu_image')|default %}
                            {% set image = get_image(post.meta('_menu_image')) %}
                            <img src="{{ image.src }}" class="card-img-top mx-auto mt-4" alt="{{ post.title }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column justify-content-end">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.description }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </nav>
{% endif %}
