<article class="col-12 col-md-6 col-lg-4">
    <a class="card signpost-card border-0 h-100 text-dark text-decoration-none" href="{{ post.path }}">
        {% if post.meta('_menu_image')|default %}
            <div class="w-100 card-img-top mx-auto mt-4">
                <img src="{{ get_image(post.meta('_menu_image')).src }}" alt="{{ post.title }}" class="mw-100"/>
            </div>
        {% endif %}
        {% set classes = post.meta('_menu_image')|default ? 'justify-content-start': 'justify-content-center align-items-center pt-5' %}
        <div class="card-body d-flex flex-column {{ classes }}">
            <h5 class="card-title {{ post.post_excerpt|default|length > 0 ? '' : 'text-center' }}">
                {{ post.title }}
            </h5>
            <p class="small card-text {{ post.post_excerpt|default|length > 0 ? 'mt-auto' : '' }}" style="text-align: justify;">
                {{ post.post_excerpt }}
            </p>
        </div>
    </a>
</article>
