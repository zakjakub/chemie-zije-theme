{% extends "post-types/page.html.twig" %}

{% block article_signpost %}
{% endblock %}

{% block article_content %}
    {% if post.content|default %}
        <section class="row my-5">
            <div class="col-12">
                <div>
                    {{ post.content }}
                </div>
            </div>
        </section>
    {% endif %}

    {% if post.children|length > 0 %}
        <nav class="nav row p-0 rounded-tabs" id="nav-tab">
            {% for index, tab in post.children %}
                {% set active = index < 1 ? 'active' : '' %}
                <button class="rounded-tab col m-0 mt-3 mx-1 px-5 px-xl-4 py-2 border border-2 border-primary {{ active }}"
                        id="nav-tab-{{ index }}"
                        data-bs-toggle="tab"
                        data-bs-target="#nav-{{ index }}"
                        type="button"
                        role="tab"
                        aria-controls="nav-{{ index }}"
                        aria-selected="{{ index < 1 ? 'true' : 'false' }}">
                    {{ tab.title }}
                </button>
            {% endfor %}
        </nav>
        <section class="row my-5">
            <div class="tab-content col-12" id="nav-tabContent">
                {% for index, tab in post.children %}
                    <div class="tab-pane fade {{ index < 1 ? ' show active' : '' }}"
                         id="nav-{{ index }}"
                         role="tabpanel"
                         aria-labelledby="nav-tab-{{ index }}">
                        {{ tab.content }}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}

{% endblock %}
