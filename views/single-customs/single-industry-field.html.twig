{% extends "post-types/page.html.twig" %}

{% block article_signpost %}
{% endblock %}

{% block article_content %}
    <section class="row my-5">
        <div class="col-12">
            <div>
                {{ post.content }}
            </div>
        </div>
    </section>

    {% if post.tabs|length > 0 %}
        <nav class="row p-0 m-0" style="line-height: 1.1;">
            <div class="nav" id="nav-tab" role="tablist">
                {% for index, tab in post.tabs %}
                    {% set classes_common = "d-flex col m-0 mt-3 mx-1 px-5 px-xl-4 py-2 text-center align-items-center justify-content-center" %}
                    {% set classes_border = "border border-2 border-primary" %}
                    {% set classes = classes_common ~ " " ~ classes_border %}
                    <button class="{{ classes }} bg-white text-primary nav-link {{ index < 1 ? ' active' : '' }}"
                            style="border-top-left-radius: 1.2em !important; border-top-right-radius: 1.2em !important;"
                            id="nav-tab-{{ index }}"
                            data-bs-toggle="tab"
                            data-bs-target="#nav-{{ index }}"
                            type="button"
                            role="tab"
                            aria-controls="nav-profile"
                            aria-selected="{{ index < 1 ? 'true' : 'false' }}">
                        {{ tab.tab_title }}
                    </button>
                {% endfor %}
            </div>
        </nav>
        <section class="row my-5">
            <div class="tab-content col-12" id="nav-tabContent">
                {% for index, tab in post.tabs %}
                    <div class="tab-pane fade {{ index < 1 ? ' show active' : '' }}"
                         id="nav-{{ index }}"
                         role="tabpanel"
                         aria-labelledby="nav-tab-{{ index }}">
                        {{ tab.tab_content }}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}

{% endblock %}
