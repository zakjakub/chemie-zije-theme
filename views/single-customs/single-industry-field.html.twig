{% extends "post-types/page.html.twig" %}

{% block article_signpost %}
{% endblock %}

{% block article_content %}
    <section class="row my-5">
        <div class="col-12">
            <div>
                {{ post.content }}
            </div>
        </div>
        {% if post.tabs|length > 0 %}
            <nav class="col-12">
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    {% for index, tab in post.tabs %}
                        <button class="nav-link {{ index < 1 ? ' active' : '' }}"
                                id="nav-tab-{{ index }}"
                                data-bs-toggle="tab"
                                data-bs-target="#nav-{{ index }}"
                                type="button"
                                role="tab"
                                aria-controls="nav-profile"
                                aria-selected="{{ index < 1 ? 'true' : 'false' }}">
                            {{ tab.tab_title }}
                        </button>
                    {% endfor %}
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                {% for index, tab in post.tabs %}
                    <div class="tab-pane fade {{ index < 1 ? ' show active' : '' }}"
                         id="nav-{{ index }}"
                         role="tabpanel"
                         aria-labelledby="nav-tab-{{ index }}">
                        {{ tab.tab_content }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    </section>
{% endblock %}
