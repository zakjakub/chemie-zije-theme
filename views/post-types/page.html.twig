{% extends "layouts/default-page.html.twig" %}

{% block body_content %}
    {% block page_content %}
        <main class="container content-wrapper">
            <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
                {% include 'post-parts/page-banner-header-row.html.twig'
                    with {image: post.thumbnail, title: post.title} %}
                {% include 'post-parts/basic-content-section.html.twig'with {title: post.title} %}
            </article>
        </main>
    {% endblock page_content %}
    {% block page_signpost %}
        {% include 'post-parts/page-signpost.html.twig' with {posts: post.children} %}
    {% endblock page_signpost %}
{% endblock body_content %}
